<% include ./partials/header %>
  <div class="ui main text container">
    <div class="ui huge header grey"><%= blog.title %></div>
    <div class="ui top attached segment">
      <div class="item">
        <img class="ui centered rounded image" src="<%= blog.image %>" alt="image">
        <div class="content">
          <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
          <p><%- blog.body %></p>
        </div>
      </div>
    </div>
    <a class="ui inverted purple button" href="/blogs/<%= blog._id %>/edit">Edit</a>
  </div>
<% include ./partials/footer %>