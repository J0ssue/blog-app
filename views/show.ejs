<% include ./partials/header %>
  <div class="ui main text container">
    <div class="ui huge header grey"><%= blog.title %></div>
    <div class="ui top attached segment">
      <div class="item">
        <img class="ui centered rounded image" src="<%= blog.image %>" alt="image">
        <div class="content">
          <span><%= blog.created.toDateString() %></span>
        </div>
        <div class="description">
          <p><%- blog.body %></p>
        </div>
      </div>
    </div>
    <div id="show-controls">
      <a class="ui inverted big purple button" href="/blogs/<%= blog._id %>/edit">Edit</a>
      <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
        <button class="ui red big inverted button">Delete</button>
      </form>
    </div>
  </div>
<% include ./partials/footer %>